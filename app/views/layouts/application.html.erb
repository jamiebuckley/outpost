<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Outpost</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- <a href="#content" class="skiplink">Skip to main content</a> -->

    <header class="site-header">
      <div class="container site-header__inner">
        <div class="site-header__masthead">
          <%= link_to image_tag("logo.svg", alt: "Buckinghamshire Council", class: "site-header__logo"), root_path, class: "site-header__logo-link" %>
        </div>
        <% if user_signed_in? %>
          <div class="site-header__actions">
            <span class="site-header__username"><%= current_user.email %></span>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "site-header__link" %>
          </div>
        <% end %>
        <nav class="site-header__service-name-holder">
          <a href="#" class="site-header__service-name">Family information service</a>
          <strong class="site-header__phase-tag">Beta</strong>
        </nav>
      </div>
    </header>

    <%= render "shared/navigation"%>

    <header class="page-header" id="content">
      <div class="container">
          <% if notice || alert %>
              <div class="alert">
                <%= notice %>
                <%= alert %>
              </div>
          <% end %>
          <%= yield :header %>
      </div>
    </header>

    <div class="page-content">
      <div class="container">
        <%= yield %>
      </div>
    </div>

    <%= render "shared/footer" %>
  </body>
</html>
